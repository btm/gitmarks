function buildMenu(menuName,menuItems,tableWid,subMenu){
O_tr = "<tr>"
C_tr = "</tr>"
C_table = "</table>"
C_div ="</div>"
// STYLE="width:'+tableWid+'px;"
document.write('<div style="visibility:hidden;" id="'+menuName+'Container">')
document.write('<div style="visibility:inherit;width:'+tableWid+'px;"  id="'+menuName+'Content" class="menu2">')
document.write('<table width="+tableWid+" cellspacing="0" cellpadding="0" bgColor="#262626" border="0">')
document.write('<tr><td width="+tableWid+">')
i = 1
do{
//  document.write(O_tr)
//  document.write('<td width="1" class="bgmenugreen"><img src="images/spacer.gif" width="1" height="1" alt="" /></td>')
if(menuItems[i][2] == null){
  document.write('<div class="menu0" style="visibility:inherit;"><a href="'+ menuItems[i][1] +'">'+menuItems[i][0]+'</a></div>')
//FROM ABOVE
} else {
  //alert(menuItems[i][2])
  document.write('<div class="menu0" style="visibility:inherit;" onMouseOver="ypScrollMenu.showMenu2(\''+menuItems[i][2]+'\');" onMouseOut="ypScrollMenu.hideMenu2(\''+menuItems[i][2]+'\');" id="'+menuItems[i][2]+'Actuator"><a href="'+menuItems[i][1]+'">'+menuItems[i][0]+'</a></div>')
//FROM ABOVE
}
  i++
  }
while (i < menuItems.length)
document.write('</tr></td></table>')

document.write(C_div)
document.write(C_div)
}

//menuName,menuItems,tableWid,subMenu


buildMenu('menu1',menuItems1,'235')
buildMenu('menu2',menuItems2,'235')
  buildMenu('menu2_Sub1',menu2_SubItems1,'200')
  buildMenu('menu2_Sub2',menu2_SubItems2,'200')
buildMenu('menu3',menuItems3,'235')
  buildMenu('menu3_Sub1',menu3_SubItems1,'200')
  buildMenu('menu3_Sub2',menu3_SubItems2,'200')
  buildMenu('menu3_Sub3',menu3_SubItems3,'200')
  buildMenu('menu3_Sub4',menu3_SubItems4,'200')
